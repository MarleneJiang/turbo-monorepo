{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^lint"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ]
    },
    "lint": {},
    "lint:fix": {},
    "lint:strict": {},
    "format": {},
    "deploy": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ]
    },
    "dev": {
      "dependsOn": [
        "build"
      ]
    },
    "prepare": {},
    "format:check": {},
    "typecheck": {}
  }
}