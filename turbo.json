{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^lint"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "__tests__/**/*.ts",
        "__tests__/**/*.tsx"
      ]
    },
    "lint": {},
    "lint:fix": {},
    "format": {},
    "deploy": {
      "dependsOn": [
        "build",
        "test",
        "lint"
      ]
    },
    "dev": {
      "dependsOn": [
        "build"
      ]
    },
    "prepare": {}
  }
}